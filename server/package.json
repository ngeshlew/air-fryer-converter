{
  "name": "air-fryer-converter-server",
  "version": "1.0.0",
  "description": "Backend API for Air Fryer Converter",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "tsx prisma/seed.ts",
    "scrape": "tsx src/scripts/scrapeAllRecipes.ts",
    "scrape:aldi": "tsx src/scripts/scrapeSingle.ts ALDI",
    "scrape:waitrose": "tsx src/scripts/scrapeSingle.ts WAITROSE",
    "scrape:tesco": "tsx src/scripts/scrapeSingle.ts TESCO",
    "scrape:ms": "tsx src/scripts/scrapeSingle.ts MARKS_AND_SPENCER",
    "scrape:bbc": "tsx src/scripts/scrapeSingle.ts BBC_GOOD_FOOD",
    "check:images": "tsx src/scripts/checkImageUrls.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^24.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "prisma": "^6.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}

